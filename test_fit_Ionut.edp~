mesh Th = square(100,100,[x,y]);
fespace Vh(Th,P1);
fespace Ph(Th,P0);

real H = 1;
real R = 2;
real x0 = .3;
real y0 = .8;
real Gamx = .1;
real Gamy = .15;

func r = sqrt( ( (x-x0)/Gamx  )^2 + ( (y-y0)/Gamy  )^2);
func gt = H+R*r/sqrt(r^2 + 2);
Vh ut = gt;

cout << "Amplitude : " << ut[].max - ut[].min << endl;

plot(ut, wait=1, cmm="New test function");